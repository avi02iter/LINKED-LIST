// CODE

// add at particular index
        void add(int index, int value) {
            //first make a new node
            Node nn=new Node(value,null);
            if(head==null){
                head=nn;
                return;
            }
            if (index == 0) {
                addFirst(value);
            } else if (index == size - 1) {
                addLast(value);
            } else {
                Node temp = head;
                int i = 0;
                while (temp != null) {
                    if (i == index) {
                        break;
                    }
                    i++;
                    temp = temp.next;
                }
                //now our temp is at desired index and now make a new node
                
                nn.next=temp.next;
                temp.next=nn;
                


            }

        }
